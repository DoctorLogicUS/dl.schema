---
# front-matter is required so we can list schemas on /index.html
---
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {},
    "id": "http://schema.doctorlogic.com/component/v1/schema.json#",
    "properties": {
        "dependencies": {
            "id": "/properties/dependencies",
            "items": {
                "description": "A list of absolute or relative URLs required for this Component. Relative paths will be resolved from the manifest file path.",
                "examples": [
                    "./component-1.scss"
                ],
                "id": "/properties/dependencies/items",
                "title": "The dependencies item schema.",
                "type": "string"
            },
            "type": "array"
        },
        "description": {
            "description": "The description of the Component.",
            "examples": [
                "The first Component of the component type."
            ],
            "id": "/properties/description",
            "title": "The description schema.",
            "type": "string"
        },
        "name": {
            "description": "The full name of the Component. The name must be of the pattern \"<component-type>:<component-name>\".",
            "examples": [
                "component:component-1"
            ],
            "id": "/properties/name",
            "pattern": "^([a-z]|_[a-z])([a-z0-9_-]*[a-z0-9])?:([0-9]+|(([a-z]|_[a-z])([a-z0-9_-]*[a-z0-9])?))$",
            "title": "The name schema.",
            "type": "string"
        },
        "template": {
            "description": "The optional template to be used by the Component.",
            "examples": [
                "component-1.html"
            ],
            "id": "/properties/template",
            "title": "The template schema.",
            "type": "string"
        }
    },
    "required": [
        "dependencies",
        "description",
        "name"
    ],
    "type": "object"
}